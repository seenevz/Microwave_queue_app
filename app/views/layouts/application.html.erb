<!DOCTYPE html>
<html>
  <head>
    <title>MicrowaveQueueApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div><%= logged_in? ? link_to('Logout', logout_path, method: :delete) : link_to('Login', login_path) %></div>
      <div><%= logged_in? ? link_to(current_user.username, current_user) : '' %></div>
      <div><%= logged_in? ? link_to("Edit", edit_user_path(current_user)) : '' %></div>
      <div><%= link_to 'Queue', timers_path %></div>
    </nav>
    <%= yield %>
  </body>
</html>
